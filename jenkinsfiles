pipeline {
    agent any
    stages {
        stage('Clone sources') {
            steps {
                git url: 'https://github.com/tkgregory/sonarqube-jacoco-code-coverage.git'
            }
        }
        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    sh "./gradlew sonarqube"
                }
            }
        }
        stage("Quality gate") {
            steps {
                waitForQualityGate abortPipeline: true
            }
        }

        stage('Requirement') {
            steps {
                echo 'Requirement gathering'
            }
        }
        
        stage('Planning') {
            steps {
                echo 'Planning'
            }
        }
        
        stage('Designing') {
            steps {
                echo 'Designing'
            }
        }
        
        stage('Developing') {
            steps {
                echo 'Developing'
            }
        }
      
        stage('Testing') {
            steps {
                echo 'Testing'
            }
        }
    }
    }
